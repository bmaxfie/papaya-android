<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_new_session"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"

    tools:context="com.papaya.scotthanberg.papaya.CreateNewSession">

    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/menuButton"
            android:src="@drawable/menuicon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:onClick="openMenu"/>

        <TextView
            android:text="papaya"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:fontFamily="sans-serif"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dropDown"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_weight="2.5"
        android:background="@android:color/holo_orange_light"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:elevation="2sp">

        <Button
            android:id="@+id/NewStudySession"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:text="New Study Session"
            android:visibility="invisible"
            android:onClick="addStudySession"
            android:elevation="2sp"/>

        <Button
            android:id="@+id/SortByClass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:text="Sort By Class"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/ManageClasses"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:text="Manage Classes"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/FindFriends"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="150dp"
            android:text="Find Friends"
            android:visibility="invisible" />
        <Button
            android:id="@+id/JoinNewClass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:text="Join A New Class"
            android:visibility="invisible"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view"
        android:background="@android:color/white"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="3dp">


        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="My Friends"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:background="@android:color/darker_gray"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello world1"
                android:textSize="24sp"
                android:padding="10sp"
                android:layout_marginBottom="3sp"
                android:background="@android:color/white"/>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
